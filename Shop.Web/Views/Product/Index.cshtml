@model IEnumerable<Shop.Business.Models.ProductViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Products</h1>

<p>
	<a asp-action="Create">Add New Product</a>
</p>
@Html.ActionLink("Show Unavailiable", "Index", new { sortOrder=ViewBag.CurrentSort, showUnavailiable = ViewBag.ShowUnavailiableToggle})
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.ActionLink(Html.DisplayNameFor(model => model.Title), "Index", new { sortOrder = ViewBag.NameSortToggle, showUnavailiable=ViewBag.ShowUnavailiable})
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Status)
			</th>
			<th>
				@Html.ActionLink(Html.DisplayNameFor(model => model.Category), "Index", new { sortOrder = ViewBag.CategorySortToggle, showUnavailiable=ViewBag.ShowUnavailiable})
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Status)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Category.Title)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
					@Html.ActionLink("Details", "Details", new { id=item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id=item.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
