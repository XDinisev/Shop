@using Shop.Domain.Entities
@model Shop.Business.Models.OrderViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Order</h1>

<hr />
<div class="text-white row">
    <div class="text-white col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-white text-danger"></div>
            <div class="text-white form-group">
                <label asp-for="Customer" class="text-white control-label"></label>
                @Html.DropDownList("CustomerId",
                                   (IEnumerable<SelectListItem>) ViewData["Customers"],
                                   new { @class = "form-control" })
                <span asp-validation-for="Customer" class="text-white text-danger"></span>
            </div>
            <div class="text-white form-group">
                <label asp-for="Product" class="text-white control-label"></label>
                @Html.DropDownList("ProductId",
                                   (IEnumerable<SelectListItem>) ViewData["Products"],
                                   new { @class = "form-control" })
                <span asp-validation-for="Product" class="text-white text-danger"></span>
            </div>
            <div class="text-white form-group">
                <label asp-for="Quantity" class="text-white control-label"></label>
                <input asp-for="Quantity" class=" form-control" min="1"/>
                <span asp-validation-for="Quantity" class="text-white text-danger"></span>
            </div>
            <div class="text-white form-group">
                <label asp-for="Date" class="text-white control-label"></label>
                <input disabled asp-for="Date" class=" form-control" />
                <span asp-validation-for="Date" class="text-white text-danger"></span>
            </div>
            <div class="text-white form-group">
                <label asp-for="Status" class="text-white control-label"></label>
                @Html.DropDownList("Status",
                                   Html.GetEnumSelectList(typeof(OrderStatus)),
                                   new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-white text-danger"></span>
            </div>
            <br />
            <div class="text-white form-group">
                <input type="submit" value="Save" class="text-white btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
