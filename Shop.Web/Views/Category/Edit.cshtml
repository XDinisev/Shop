@model Shop.Business.Models.CategoryViewModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit Category</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>

				@Html.DropDownList("Status",
				new SelectList(Enum.GetValues(typeof(Shop.Domain.Entities.CategoryStatus))),
				new { @class = "form-control", @onchange="Change(this)", @onload="Change(this)"})

				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="IsDefault" class="control-label"></label>

				@Html.DropDownList("IsDefault",
				new SelectList(Enum.GetValues(typeof(Shop.Domain.Entities.IsDefault))),
				new { @class = "form-control"})

				<span asp-validation-for="IsDefault" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript">
	function Change(status) {
		console.log("ASHFGDSAHFLJGADSFGJADF")
		if (status.value == "Disabled") {
			var defaultStatus = document.getElementById("IsDefault")
			document.getElementById("IsDefault").setAttribute("readonly", "true")
			document.getElementById("IsDefault").setAttribute("style", "pointer-events: none;")
			defaultStatus.value = "No"
		}
		else
			document.getElementById("IsDefault").disabled = false
	}
</script>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
